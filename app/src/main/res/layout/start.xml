<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Main"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:orientation="vertical">

        <include
            layout="@layout/activity_rob_toolbar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include layout="@layout/activity_rob_nav_drawer" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="@string/home"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="97dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <Button
                    android:id="@+id/Main_b_private"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:background="#400000"
                    android:text="Private Bills"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/Main_b_Business"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:background="#400000"
                    android:text="Buisness Bill"
                    android:textColor="#ffffff" />

            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:layout_width="380dp"
            android:layout_height="390dp"
            android:layout_marginTop="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Display_Info"
                    android:layout_width="380dp"
                    android:layout_height="400dp"
                    android:text="" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>