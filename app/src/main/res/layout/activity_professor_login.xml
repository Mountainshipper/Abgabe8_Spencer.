<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Assistent.ProfessorLogin">

    <EditText
        android:id="@+id/edtProfEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Please enter an Email"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Button
        android:id="@+id/btnProfSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="@+id/btnProfLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnProfLogin"
        app:layout_constraintTop_toBottomOf="@+id/btnProfLogin" />

    <Button
        android:id="@+id/btnProfLogin"
        android:layout_width="94dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="Log In"
        app:layout_constraintEnd_toEndOf="@+id/edtProfPassword"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="@+id/edtProfPassword"
        app:layout_constraintTop_toBottomOf="@+id/edtProfPassword" />

    <EditText
        android:id="@+id/edtProfPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Please enter a Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/edtProfEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtProfEmail"
        app:layout_constraintTop_toBottomOf="@+id/edtProfEmail" />

    <Button
        android:id="@+id/btnProf_toInterface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Interface Login"
        app:layout_constraintEnd_toEndOf="@+id/btnProfSignUp"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/btnProfSignUp"
        app:layout_constraintTop_toBottomOf="@+id/btnProfSignUp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="555dp"
        android:layout_height="371dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/professor_login" />

</androidx.constraintlayout.widget.ConstraintLayout>