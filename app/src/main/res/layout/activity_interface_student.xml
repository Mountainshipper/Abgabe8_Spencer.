<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".INTERFACE_STUDENT">

  <Button
      android:id="@+id/btnProject"
      android:layout_width="130dp"
      android:layout_height="60dp"
      android:layout_marginTop="68dp"
      android:text="Projekt"
      app:layout_constraintEnd_toEndOf="@+id/imageView12"
      app:layout_constraintStart_toStartOf="@+id/imageView12"
      app:layout_constraintTop_toBottomOf="@+id/imageView12" />

  <Button
      android:id="@+id/btnBachelor"
      android:layout_width="130dp"
      android:layout_height="60dp"
      android:layout_marginTop="64dp"
      android:text="Bachelor"
      app:layout_constraintEnd_toEndOf="@+id/btnProject"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/btnProject"
      app:layout_constraintTop_toBottomOf="@+id/btnProject" />

  <Button
      android:id="@+id/btnMaster"
      android:layout_width="0dp"
      android:layout_height="60dp"
      android:layout_marginTop="68dp"
      android:text="Master"
      app:layout_constraintEnd_toEndOf="@+id/btnBachelor"
      app:layout_constraintStart_toStartOf="@+id/btnBachelor"
      app:layout_constraintTop_toBottomOf="@+id/btnBachelor" />

  <ImageView
      android:id="@+id/imageView12"
      android:layout_width="330dp"
      android:layout_height="220dp"
      android:layout_marginTop="40dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.493"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/student_int"
      tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>