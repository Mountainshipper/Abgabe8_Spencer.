<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Student.Project">



<ScrollView
    android:layout_marginLeft="200dp"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_GetTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>
</ScrollView>






    <HorizontalScrollView
        android:layout_marginLeft="150dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_GetText"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:background="#400000"
        android:text="Get all available works"
        android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn_GetProfessor"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="20dp"
                android:background="#400000"
                android:text="Get all available professors"
                android:textColor="#ffffff" />

        </LinearLayout>
    </HorizontalScrollView>









    <ScrollView
        android:layout_marginLeft="200dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_GetTitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
    </ScrollView>







    <HorizontalScrollView
        android:layout_marginLeft="200dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/txt_Choose_Work"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="20dp"
                android:hint="Write Work"
                android:text=""
                android:textColorHint="#757575" />

            <EditText
                android:id="@+id/txt_Choose_Professor"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="20dp"
                android:hint="Write Professor"
                android:text=""
                android:textColorHint="#757575" />
        </LinearLayout>
    </HorizontalScrollView>






    <HorizontalScrollView
        android:layout_marginLeft="150dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_Upload_ALL"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="147dp"
                android:layout_marginTop="20dp"
                android:background="#400000"
                android:text="Upload all data"
                android:textColor="#ffffff" />

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>