<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".After_Login.abrechnung">

    <TextView
        android:id="@+id/tv_pretax"
        android:layout_width="239dp"
        android:layout_height="48dp"
        android:text="TOTAL PRE-TAX"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="9pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_date1"
        android:layout_width="239dp"
        android:layout_height="30dp"
        android:text="2022"
        android:gravity="center"
        android:textSize="6pt"
        app:layout_constraintTop_toBottomOf="@+id/tv_pretax"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/lineabrechnung"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date1"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/ergebnis"
        android:layout_width="239dp"
        android:layout_height="30dp"
        android:text="300 â‚¬"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="9pt"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/lineabrechnung"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/btn_abrechnungdone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:backgroundTint="@color/white"
        android:text="Done"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>