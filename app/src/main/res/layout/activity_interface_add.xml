<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Interface_ADD">

    <EditText
        android:id="@+id/txt_PASSWORD_ADD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_USERNAMR_ADD"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_USERNAMR_ADD"
        app:layout_constraintTop_toBottomOf="@+id/txt_USERNAMR_ADD" />

    <EditText
        android:id="@+id/txt_USERNAMR_ADD"
        android:layout_width="153dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txt_EMAIL_ADD"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_EMAIL_ADD"
        app:layout_constraintTop_toBottomOf="@+id/txt_EMAIL_ADD" />

    <CheckBox
        android:id="@+id/check_Student"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Student"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/check_Assistent" />

    <CheckBox
        android:id="@+id/check_Assistent"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="432dp"
        android:text="Assistent"
        app:layout_constraintEnd_toStartOf="@+id/check_Admin"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toEndOf="@+id/check_Student"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/check_Admin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/check_Assistent" />

    <Button
        android:id="@+id/addUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="ADD USER"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/check_Assistent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/check_Assistent"
        app:layout_constraintTop_toBottomOf="@+id/check_Assistent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="196dp"
        android:layout_height="233dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14"
        app:srcCompat="@drawable/flower" />

    <EditText
        android:id="@+id/txt_EMAIL_ADD"
        android:layout_width="151dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>