<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Main"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/activity_rob_toolbar" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="97dp"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/Private_Button"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:background="#400000"
                    android:text="Private Bills"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/Business_Button"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:background="#400000"
                    android:text="Buisness Bill"
                    android:textColor="#ffffff" />

            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:layout_width="349dp"
            android:layout_height="584dp"
            android:layout_marginLeft="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_Display_User"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:text="" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include layout="@layout/activity_rob_nav_drawer" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/home"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>